<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <div class="navbar-yelp">
      <!-- Logo -->
      <%= link_to restaurants_path, class: "navbar-yelp-brand" do %>
        <%= image_tag "yelplogo.png" %>
      <% end %>

      <!-- Right Navigation -->
      <div class="navbar-yelp-right hidden-xs hidden-sm">

        <!-- Search form -->
        <form action="" class="navbar-yelp-search">
          <input type="text" class="navbar-yelp-search-input" placeholder="Search something">
          <button type="submit" class="navbar-yelp-search-btn">
            <i class="fa fa-search"></i>
          </button>
        </form>

        <!-- Notification -->
        <%= link_to "#", class: "navbar-yelp-item navbar-yelp-link" do %>
          <div class="badge-container">
            <i class="fa fa-envelope-o"></i>
            <div class="badge badge-blue">3</div>
          </div>
        <% end %>

        <!-- Profile picture and dropdown -->
        <div class="navbar-yelp-item">
          <div class="dropdown">
            <%= image_tag "profile.jpeg", class: "avatar dropdown-toggle", id: "navbar-yelp-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-yelp-dropdown-menu">
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>

        <!-- Button (call-to-action) -->
        <%= link_to t("restaurant_path", default: "Add a restraurant"), "restaurants/new", class: "navbar-yelp-item navbar-yelp-button btn" %>
      </div>

      <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-yelp-item hidden-md hidden-lg">
        <div class="dropdown">
          <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
          <ul class="dropdown-menu dropdown-menu-right navbar-yelp-dropdown-menu">
            <li><a href="#">Some mobile link</a></li>
            <li><a href="#">Other one</a></li>
            <li><a href="#">Other one</a></li>
          </ul>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
