<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Restaurants</h1>

      <%= link_to "Add a new restaurant", new_restaurant_path %>

      <% @restaurants.each do |restaurant| %>
        <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <p><%= restaurant.address %></p>
        <p><%= restaurant.category %></p>
        <%= link_to "Delete this restaurant", restaurant_path(restaurant), method: :delete %> ||
        <%= link_to "Add a new review", new_restaurant_review_path(restaurant) %>
        <hr>
      <% end %>
    </div>
  </div>
</div>


