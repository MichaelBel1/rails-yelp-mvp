<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for @restaurant, class: 'form-inline' do |f| %>
        <%= f.label :name, "Enter a name" %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :address, "Enter a address" %>
        <%= f.text_field :address %>

        <%= f.label :category, "Enter a category" %>
        <%= f.text_field :category %>

        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>

